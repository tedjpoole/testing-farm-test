summary: "build-and-test-release"

prepare:
  - name: packages
    how: install
    package: [ docker ]
  - name: services
    how: shell
    script: systemctl start docker

execute:
    how: tmt
    script: |
        set -x # echo commands
        set +e # ignore errors
        mkdir -p ~/.ssh && chmod 700 ~/.ssh
        echo "ssh-rsa  ejp@black" >> ~/.ssh/authorized_keys
        chmod 644 ~/.ssh/authorized_keys
        ip a
        pwd
        setenforce 0
        useradd envoyuser -G docker
        sudo -i -u envoyuser "$(pwd)/openssl/run_envoy_docker.sh" ./ci/do_ci.sh release || true
        ip a
        echo SLEEPING
        sleep 1000000000

