summary: "build-and-test-release"

prepare:
  - name: packages
    how: install
    package: [ docker ]
  - name: services
    how: shell
    script: systemctl start docker

execute:
    how: tmt
    script: |
        set -x
        pwd
        whoami
        id -u
        id -g
        SAVEWD="$(pwd)"
        useradd envoyuser
        sudo -i -u envoyuser bash <<-EOF
        set -x
        whoami
        id -u
        id -g
        pwd
        cd "${SAVEWD}"
        pwd
        ls -la "$(pwd)"
        export ENVOY_DOCKER_BUILD_DIR="$(pwd)/.build"
        mkdir -p "${ENVOY_DOCKER_BUILD_DIR}"
        ls -la "$(pwd)"
        ./openssl/run_envoy_docker.sh ./ci/do_ci.sh release
        EOF
        echo SLEEPING
        sleep 1000000000
