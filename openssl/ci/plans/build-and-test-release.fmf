summary: "build-and-test-release"

prepare:
  - name: packages
    how: install
    package: [ docker ]
  - name: services
    how: shell
    script: systemctl start docker

execute:
    how: tmt
    script: |
        set -x
        useradd envoyuser
        usermod -aG docker envoyuser
        sudo -i -u envoyuser "$(pwd)/openssl/run_envoy_docker.sh" ./ci/do_ci.sh release || true
        echo SLEEPING
        sleep 1000000000

